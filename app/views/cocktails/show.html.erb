<div class="banner" style="background-image: linear-gradient(-225deg, rgba(45,108,177,0.6) 0%, rgba(45,108,177,0.9) 50%), url('cocktail_background.jpeg');">
  <div class="banner-content">
    <h1><%= @cocktail.name%></h1>
    <br>
    <p>What's the secret:</p>
    <br>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> of <%= dose.ingredient.name %></li>
      <% end %>
    </ul>
  </div>
</div>


